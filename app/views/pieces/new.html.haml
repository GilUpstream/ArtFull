.page-header
  %h1
    = @location.name
    %small
      = @location.space
      |
      = @location.city + ","
      = @location.state

.row
  .col-xs-11
    .container#checkin-container
      %h1 Add New Piece
      = form_for [@location, @piece] do |f|
        = f.label :title, :caption => "Title"
        = f.text_field :title
        %br
        = f.label :maker, :caption => "Made by"
        = f.text_field :maker
        %br
        = f.label :stuff, :caption => "Made with"
        = f.text_field :stuff
        %br
        = f.label :time_period, :caption => "Time period"
        = f.text_field :time_period
        %br
        %button.btn.btn-default.btn-primary.btn-lg.btn-block
          %span.glyphicon.glyphicon-plus
          Add
